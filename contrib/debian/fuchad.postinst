
#!/bin/sh

# setup fucha account, homedir etc

set -e

BCUSER="fucha"
BCHOME="/var/lib/fucha"

if [ "$1" = "configure" ]; then
	# Add fucha user/group - this will gracefully abort if the user already exists.
	# A homedir is never created.
	set +e
	adduser --system --home "${BCHOME}" --no-create-home --group "${BCUSER}" 2>/dev/null
	set -e

	# If the homedir does not already exist, create it with proper
	# ownership and permissions.
	if [ ! -d "${BCHOME}" ]; then
		mkdir -m 0750 -p "${BCHOME}"
		chown "${BCUSER}:${BCUSER}" "${BCHOME}"
	fi
fi

#DEBHELPER#

exit 0
